{% assign text_id = section.id | replace: '_', '' | downcase %}

{% style %}
 .text-content-{{ text_id }} {
 display: block;
 width: {{ section.settings.desktop_width_percent }}%;
 max-width: 100%;
 padding: {{ section.settings.section_padding }}px;
 position: relative;
 overflow: hidden;
 }

 .text-content__background-{{ text_id }} {
 position: absolute;
 top: 0;
 left: 0;
 width: 100%;
 height: 100%;
 z-index: 0;
 }

 .text-content__background-image-{{ text_id }} {
 width: 100%;
 height: 100%;
 object-fit: cover;
 opacity: {{ section.settings.background_opacity | divided_by: 100.0 }};
 }

 .text-content__background-placeholder-{{ text_id }} {
 width: 100%;
 height: 100%;
 background-color: #f4f4f4;
 opacity: {{ section.settings.background_opacity | divided_by: 100.0 }};
 }

 .text-content__background-placeholder-{{ text_id }} svg {
 width: 100%;
 height: 100%;
 object-fit: cover;
 }

 .text-content__overlay-{{ text_id }} {
 position: absolute;
 top: 0;
 left: 0;
 width: 100%;
 height: 100%;
 background-color: {{ section.settings.overlay_color }};
 opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
 z-index: 1;
 }

 .text-content__bottom-heading-template--19170378023156herosplitcontent {
    font-size: 18px;
    color: #121212;
    
    margin: 0;
    padding-top: 35px !important;
    text-align: center;
    line-height: 1.2;
}

.text-content__description-template--19170378023156herosplitcontent {
    font-size: 13px;
    color: #666666;
    margin: 0;
    padding-bottom: 8px;
    border-bottom: 1px solid #121212;
    line-height: 1.6;
    width: 60% ! important;
}

.text-content__button-template--19170378023156herosplitcontent {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;

    /* Gradient background */
    background: linear-gradient(90deg, #9333EA 0%, #2563EB 100%) !important;

    color: #ffffff;
    text-decoration: none;
    border-radius: 0px;
    font-size: 16px;
    transition: background 0.3s ease;
    border: none;
    cursor: pointer;
    width: fit-content;
}

.text-content__heading-template--19170378023156herosplitcontent {
    font-size: 36px;
    color: linear-gradient(90deg, #9333EA 0%, #2563EB 100%) !important;
    margin: 0;
    line-height: 1.2;
}

@media (max-width: 768px) {
  .text-content__button-template--19170378023156herosplitcontent {
    display: flex !important;
    margin: 0 auto !important;   /* centers horizontally */
  }
}
